<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Tree view for Partner Payment Method -->
        <record id="view_res_partner_payment_method_tree" model="ir.ui.view">
            <field name="name">view.res.partner.payment.method.tree</field>
            <field name="model">res.partner.payment.method</field>
            <field name="type">tree</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <tree string="model_tree" create="true" delete="true" edit="true">
                    <field name="name" />
                </tree>
            </field>
        </record>
        
        <!-- Form view for Partner Payment Method -->
        <record id="view_res_partner_payment_method_form" model="ir.ui.view">
            <field name="name">view.res.partner.payment.method.form</field>
            <field name="model">res.partner.payment.method</field>
            <field name="type">form</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <form string="model_form" create="true" delete="true" edit="true">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only" />
                            <h1>
                                <field name="name" class="oe_inline"
                                    placeholder="name" />
                            </h1>
                        </div>
                        <group>
        
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!-- Search view for Partner Payment Method -->
        <record id="view_res_partner_payment_method_search" model="ir.ui.view">
            <field name="name">view.res.partner.payement.method.search</field>
            <field name="model">res.partner.payment.method</field>
            <field name="type">search</field>
            <field name="mode">primary</field>
            <field name="priority" eval="16" />
            <field name="active" eval="True" />
            <field name="arch" type="xml">
                <search string="model_search">
                    <field name="name" />
                </search>
            </field>
        </record>
        
        <!-- Main window action for Partner Payment Method -->
        <record id="action_res_partner_payment_method_act_window" model="ir.actions.act_window">
            <field name="type">ir.actions.act_window</field>
            <field name="name">Payment Method</field>
            <field name="res_model">res.partner.payment.method</field>
            <field name="view_mode">tree,form</field>
            <field name="view_type">form</field>
            <field name="target">current</field>
            <field name="domain">[]</field>
            <field name="context">\{}</field>
            <field name="search_view_id" ref="view_res_partner_payment_method_search" />
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click to add new partner payment method
                </p><p>
                    Partner Payment Method
                </p>
            </field>
        </record>
        
        <!-- Main menu for Partner Payment Method -->
        <record id="menu_res_partner_payment_method" model="ir.ui.menu" >
            <field name="name">Payment Method</field>
            <field name="sequence" eval="10" />
            <field name="action" ref="action_res_partner_payment_method_act_window" />
            <field name="parent_id" ref="sale.menu_sale_config" />
        </record>
        
    </data>
</odoo>