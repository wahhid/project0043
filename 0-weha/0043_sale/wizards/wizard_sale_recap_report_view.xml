<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="sale_recap_report_wizard">
        <field name="name">Sale Recap Report</field>
        <field name="model">sale.recap.report.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Sale Recap Report">
                <group>
                    <group>
                        <field name="date_start"/>
                        <field name="report_type"/> 
                    </group>
                    <group>
                        <field name="date_end"/>
                    </group>
                </group>
                <footer>
                    <button name="get_report" string="Get Report" type="object" class="oe_highlight"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <act_window id="action_sale_recap_report_wizard"
                name="Sale"
                res_model="sale.recap.report.wizard"
                view_mode="form"
                target="new"/>

    <menuitem action="action_sale_recap_report_wizard"
              id="menu_sale_recap_report_wizard"
              parent="sale.menu_sale_report"
              groups="sales_team.group_sale_manager"/>
</odoo>